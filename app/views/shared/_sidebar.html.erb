<%= link_to "<i class='material-icons md-18'>filter_list</i> Filtres".html_safe, "#", class: "button outline secondary z400", id: "filters", "data-component" => "offcanvas", "data-target" => "#offcanvas-left" %>

<aside id="offcanvas-left" class="hide">
  <ul>
    <li>
      <p>Catégories</p>
      <button type="button" data-filter="all" class="category">All</button>
      <% Thesis::CATEGORIES.each do |category| %>
      <button type="button" data-filter=".<%= category %>" class="category"><%=category.gsub("-", " ").capitalize %></button>
      <% end %>
    </li>
    <li>Sous-catégories</li>
    <li>Période</li>
    <li>Écoles</li>
    <li>Diplômes</li>
    <li>Licenses</li>
  </ul>
</aside>
