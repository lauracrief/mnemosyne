<div class="container login_signup">
  <h2><%= t(".sign_up") %></h2>

  <%= simple_form_for(resource, as: resource_name, defaults: { wrapper_html: { class: 'form-item'} }, html: { class: "form" }, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, input_html: { class: 'big' }, placeholder: "user@domain.com", required: true, autofocus: true %>
      <%= f.input :password, input_html: { class: 'big' }, required: true %>
      <%= f.input :password_confirmation, input_html: { class: 'big' }, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(".sign_up"), class: "button secondary upper big" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
