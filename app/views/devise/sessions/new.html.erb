<div class="container login_signup">
  <h2><%= t(".sign_in") %></h2>
  <%= simple_form_for(resource, as: resource_name, defaults: { wrapper_html: { class: 'form-item'} }, html: { class: "form" }, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, input_html: { class: 'big' }, placeholder: "user@domain.com", required: false, autofocus: true %>
      <%= f.input :password, input_html: { class: 'big' }, required: false %>
      <%= f.input :remember_me, label_html: { class: "checkbox" }, as: :boolean if devise_mapping.rememberable?%>
    </div>

    <%- if devise_mapping.omniauthable? %>
    <ul class="image-list signin-icons">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <li><%= link_to ("<span class='fa fa-twitter'></span> Sign in with #{provider.to_s.titleize}").html_safe, omniauth_authorize_path(resource_name, provider), class: "button big"%>
        </li>
      <% end %>
    </ul>
  <% end -%>

    <div class="form-actions">
      <%= f.button :submit, t(".sign_in"), class: "button secondary upper big" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

