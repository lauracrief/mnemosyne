<h1>Schools#index</h1>

<ul>
  <% @schools.each do |school| %>
    <li><%= school.name %></li>
  <% end %>
</ul>

<!-- alert javascript -->
<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @school_coordinates.to_json %>;
      alert('School coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
