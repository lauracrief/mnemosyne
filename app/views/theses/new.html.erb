<div class="container">
  <h2>Mon mémoire</h2>
  <%= simple_form_for @thesis, defaults: { wrapper_html: { class: 'form-item'} }, html: { class: "form" } do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :title, input_html: { class: 'big' } %>
      <%= f.input :subtitle %>
      <div class="row gutters">
        <div class="col col-5">
          <%= f.input :school_id, collection: School.all, input_html: { class: 'big' } %>
        </div>
        <div class="col col-4">
          <%= f.input :thesis_diploma, collection: Diploma.all, label: 'Diplôme', input_html: { class: 'big' } %>
        </div>
        <div class="col col-3">
          <%= f.input :year,
                      start_year: 1980,
                      end_year: Date.today.year,
                      order: [:year],
                      input_html: { class: 'big' }
                      %>
        </div>
      </div>
      <%= f.input :document, label: 'PDF', input_html: { class: 'big' } %>
      <%= f.input :document_cache, as: :hidden %>
    </div>
    <div class="form-actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
